<body>

<div class="flex-container">
	<div class="flexslider">
		<ul class="slides">
			<li>
				<img src="Images/picture1.jpg" />
                <p>PIPI!</p>
			</li>			
			<li>
				<img src="Images/picture2.jpg" />
                <p>PIPI!</p>
			</li>	
			<li>
				<img src="Images/picture3.jpg" />
				<p>PIPI!</p>
			</li>
		</ul>
	</div>
</div>

<script>
    $(document).ready(function () {
        $('.flexslider').flexslider({
            animation: 'slide',
            controlsContainer: '.flexslider',
            slideshowSpeed: '7000', 
            animationSpeed: '1000',
            touch: 'true',
            pausePlay: 'true'
        });
    });
</script>
</body>
</html>


